---
import '../styles/global.css';
import '../styles/tailwind.css';
import AgentConsole from '../components/AgentConsole.jsx';
import ChronoSync from '../components/ChronoSync.astro';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>LitLabs OS: The Decentralized AI Operating System</title>
    <meta name="description" content="Welcome to LitLabs OS, a decentralized, AI-powered operating system for the new web. Explore the future of decentralized applications and AI integration." />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Space+Grotesk:wght@600&display=swap" rel="stylesheet">
  </head>
  <body class="bg-gray-900 text-white font-sans overflow-hidden">
    <div id="background-layer" class="background-layer"></div>
    <div id="digital-dust" class="digital-dust"></div>
    <div class="app-layout">
      <ChronoSync />
      <header class="fixed top-0 left-0 right-0 z-50 bg-black bg-opacity-30 backdrop-blur-lg border-b border-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex items-center justify-between h-16">
            <div class="flex items-center">
              <a href="/" class="text-2xl font-bold font-display bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-pink-600">LitLabs</a>
            </div>
            <nav class="hidden md:block">
              <ul class="flex items-center space-x-4">
                <li><a href="/" class="text-gray-300 hover:text-white transition-colors duration-200">Dashboard</a></li>
                <li><a href="/studio" class="text-gray-300 hover:text-white transition-colors duration-200">Studio</a></li>
                <li><a href="/lab" class="text-gray-300 hover:text-white transition-colors duration-200">Lab</a></li>
                <li><a href="/network" class="text-gray-300 hover:text-white transition-colors duration-200">Network</a></li>
              </ul>
            </nav>
          </div>
        </div>
      </header>
      <main class="pt-16 relative z-10">
        <slot />
      </main>
      <footer class="bg-transparent text-center py-6 px-4 sm:px-6 lg:px-8 relative z-10">
          <p class="text-gray-500">&copy; {new Date().getFullYear()} LitLabs. All rights reserved.</p>
      </footer>
      <div class="agent-console-container">
          <AgentConsole client:load />
      </div>
    </div>
    <style>
      :root {
        --font-primary: 'Inter', sans-serif;
        --font-secondary: 'Space Grotesk', sans-serif;
      }

      .background-layer {
        position: fixed;
        top: -50px; left: -50px; right: -50px; bottom: -50px;
        background-image: url('https://images.unsplash.com/photo-1534796636912-3b95b3ab5986?q=80&w=2071&auto=format&fit=crop');
        background-size: cover;
        background-position: center;
        z-index: 1;
        transition: transform 0.1s linear;
      }

      .digital-dust {
        position: fixed;
        top: -50%; left: -50%; right: -50%; bottom: -50%;
        width: 200%;
        height: 200%;
        background-image: url('data:image/png;base64,');
        z-index: 2;
        opacity: 0.03;
        will-change: transform;
        animation: noise-flicker 20s linear infinite;
      }
      
      .app-layout {
        position: relative;
        z-index: 3;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background: linear-gradient(180deg, rgba(18, 18, 20, 0.8) 0%, rgba(18, 18, 20, 0.95) 100%);
        overflow-y: auto;
        height: 100vh;
      }

      .agent-console-container {
        position: fixed;
        bottom: 1rem;
        right: 1rem;
        z-index: 1000;
      }

      @keyframes noise-flicker {
        0%, 100% { opacity: 0.02; }
        10% { opacity: 0.04; }
        20% { opacity: 0.01; }
        30% { opacity: 0.05; }
        40% { opacity: 0.02; }
        50% { opacity: 0.03; }
        60% { opacity: 0.01; }
        70% { opacity: 0.04; }
        80% { opacity: 0.02; }
        90% { opacity: 0.03; }
      }
    </style>

    <script is:inline>
      document.addEventListener('mousemove', (e) => {
        const bg = document.getElementById('background-layer');
        const dust = document.getElementById('digital-dust');
        const x = (e.clientX / window.innerWidth) - 0.5;
        const y = (e.clientY / window.innerHeight) - 0.5;

        if (bg) {
          bg.style.transform = `translateX(${-x * 20}px) translateY(${-y * 20}px)`;
        }
        if (dust) {
          dust.style.transform = `translateX(${-x * 30}px) translateY(${-y * 30}px)`;
        }
      });
    </script>
  </body>
</html>
