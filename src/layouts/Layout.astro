---
import '../styles/global.css';
import AgentConsole from '../components/AgentConsole.jsx';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>LitLabs OS</title>
    <meta name="description" content="LitLabs OS is a decentralized AI operating system for the new web." />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Space+Grotesk:wght@600&display=swap" rel="stylesheet">
  </head>
  <body>
    <div class="app-layout">
      <aside class="sidebar">
        <!-- Navigation will go here -->
        <div class="logo">
          LitLabs
        </div>
        <nav class="navigation">
          <ul>
            <li><a href="/" aria-label="Dashboard">Dashboard</a></li>
            <li><a href="/studio" aria-label="Studio">Studio</a></li>
            <li><a href="/lab" aria-label="Lab">Lab</a></li>
            <li><a href="/network" aria-label="Network">Network</a></li>
          </ul>
        </nav>
      </aside>
      <main class="main-content">
        <slot />
      </main>
      <div class="agent-console-container">
          <AgentConsole client:load />
      </div>
    </div>
    <style>
      .app-layout {
        display: flex;
        height: 100vh;
      }
      .sidebar {
        width: 240px;
        background: rgba(5, 7, 10, 0.8);
        border-right: 1px solid var(--color-border);
        padding: 2rem 1rem;
        display: flex;
        flex-direction: column;
      }
      .logo {
        font-family: var(--font-secondary);
        font-size: 1.5rem;
        font-weight: 600;
        text-align: center;
        margin-bottom: 3rem;
      }
      .navigation ul {
        list-style: none;
      }
      .navigation li a {
        display: block;
        color: var(--color-text-secondary);
        text-decoration: none;
        padding: 0.75rem 1rem;
        border-radius: 8px;
        margin-bottom: 0.5rem;
        transition: background 0.2s, color 0.2s;
      }
      .navigation li a:hover, .navigation li a.is-active {
        background: var(--color-accent);
        color: var(--color-text-primary);
      } 
      .main-content {
        flex: 1;
        padding: 2rem;
        overflow-y: auto;
      }
    </style>
  </body>
</html>
