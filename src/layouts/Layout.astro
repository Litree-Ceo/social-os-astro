---
import '../styles/global.css';
import AgentConsole from '../components/AgentConsole.jsx';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>LitLabs OS</title>
    <meta name="description" content="LitLabs OS is a decentralized AI operating system for the new web." />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Space+Grotesk:wght@600&display=swap" rel="stylesheet">
  </head>
  <body>
    <div class="app-layout">
      <header class="header">
        <div class="logo">
          <a href="/">LitLabs</a>
        </div>
        <nav class="navigation">
          <ul>
            <li><a href="/">Dashboard</a></li>
            <li><a href="/studio">Studio</a></li>
            <li><a href="/lab">Lab</a></li>
            <li><a href="/network">Network</a></li>
          </ul>
        </nav>
      </header>
      <main class="main-content">
        <slot />
      </main>
      <footer class="footer">
        <p>&copy; {new Date().getFullYear()} LitLabs. All rights reserved.</p>
      </footer>
      <div class="agent-console-container">
          <AgentConsole client:load />
      </div>
    </div>
    <style>
      :root {
        --color-primary: #1a1a1a;
        --color-secondary: #2a2a2a;
        --color-accent: #0070f3;
        --color-text-primary: #ffffff;
        --color-text-secondary: #a0a0a0;
        --color-border: #333333;
        --font-primary: 'Inter', sans-serif;
        --font-secondary: 'Space Grotesk', sans-serif;
      }

      body {
        background-color: var(--color-primary);
        color: var(--color-text-primary);
        font-family: var(--font-primary);
        margin: 0;
      }

      .app-layout {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        border-bottom: 1px solid var(--color-border);
        background-color: rgba(26, 26, 26, 0.8);
        backdrop-filter: blur(10px);
        position: sticky;
        top: 0;
        z-index: 100;
      }

      .logo a {
        font-family: var(--font-secondary);
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--color-text-primary);
        text-decoration: none;
      }

      .navigation ul {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
      }

      .navigation li {
        margin-left: 2rem;
      }

      .navigation a {
        color: var(--color-text-secondary);
        text-decoration: none;
        transition: color 0.2s;
      }

      .navigation a:hover,
      .navigation a.is-active {
        color: var(--color-text-primary);
      }

      .main-content {
        flex: 1;
        padding: 2rem;
      }

      .footer {
        padding: 1rem 2rem;
        border-top: 1px solid var(--color-border);
        text-align: center;
        font-size: 0.875rem;
        color: var(--color-text-secondary);
      }

      .agent-console-container {
        position: fixed;
        bottom: 1rem;
        right: 1rem;
        z-index: 1000;
      }

      @media (max-width: 768px) {
        .header {
          flex-direction: column;
          align-items: flex-start;
        }

        .navigation {
          margin-top: 1rem;
        }

        .navigation li {
          margin-left: 0;
          margin-right: 1.5rem;
        }
      }
    </style>
  </body>
</html>
