---
// AgentConsole.astro
---
<div id="agent-console" class="glass-card">
  <h3>Neural Link Required</h3>
  <p>Connect to LitLabs OS to access your full suite of AI agents and tools.</p>
  <div class="auth-buttons">
    <button id="login-google" class="btn google-btn">Connect via Google</button>
    <button id="login-github" class="btn github-btn">Connect via GitHub</button>
  </div>
</div>

<script>
  import { supabase } from '../lib/supabase';

  const login = async (provider: 'google' | 'github') => {
    await supabase.auth.signInWithOAuth({
      provider,
      options: {
        redirectTo: `${window.location.origin}/api/auth/callback`,
      },
    });
  };

  document.getElementById('login-google')?.addEventListener('click', () => login('google'));
  document.getElementById('login-github')?.addEventListener('click', () => login('github'));
</script>

<style>
  #agent-console {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 380px;
    z-index: 1000;
    padding: 1.5rem;
  }
  h3 {
    font-family: var(--font-secondary);
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }
  p {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }
  .btn {
    display: block;
    width: 100%;
    padding: 0.75rem;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    font-weight: 600;
    font-family: var(--font-primary);
    transition: background-color 0.3s ease;
  }
  .google-btn {
    background-color: #4285F4;
    color: white;
    margin-bottom: 0.75rem;
  }
  .google-btn:hover {
    background-color: #5a9bff;
  }
  .github-btn {
    background-color: #333;
    color: white;
  }
  .github-btn:hover {
    background-color: #444;
  }
</style>
