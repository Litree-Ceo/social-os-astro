---
import Layout from '../layouts/Layout.astro';
import InteractiveFeed from '../components/InteractiveFeed.jsx';
import Icon from 'astro-icon';
---

<Layout>
  <div class="grid grid-cols-1 md:grid-cols-4 gap-8 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Left Column: Identity Core -->
    <aside class="col-span-1 hidden md:block">
      <div class="sticky top-20">
        <div class="identity-card bg-gray-800 bg-opacity-40 backdrop-blur-md border border-gray-700 rounded-lg p-6 text-center">
            <img src="https://randomuser.me/api/portraits/men/86.jpg" alt="User Avatar" class="w-24 h-24 rounded-full mx-auto mb-4 border-4 border-gray-600">
            <h2 class="text-2xl font-bold text-white">Larry</h2>
            <p class="text-gray-400">@Larry</p>
            <div class="flex justify-around mt-4">
                <div class="text-center">
                    <p class="text-xl font-bold text-white">142</p>
                    <p class="text-sm text-gray-400">Posts</p>
                </div>
                <div class="text-center">
                    <p class="text-xl font-bold text-white">1.2k</p>
                    <p class="text-sm text-gray-400">Syncs</p>
                </div>
            </div>
        </div>
        <nav class="mt-8">
            <a href="#" class="flex items-center space-x-3 text-gray-300 hover:text-white hover:bg-gray-700 px-4 py-3 rounded-lg transition-colors duration-200">
                <Icon name="mdi:view-dashboard-outline" class="w-6 h-6" />
                <span>Dashboard</span>
            </a>
            <a href="#" class="flex items-center space-x-3 text-gray-300 hover:text-white hover:bg-gray-700 px-4 py-3 rounded-lg transition-colors duration-200">
                <Icon name="mdi:compass-outline" class="w-6 h-6" />
                <span>Explore</span>
            </a>
            <a href="#" class="flex items-center space-x-3 text-gray-300 hover:text-white hover:bg-gray-700 px-4 py-3 rounded-lg transition-colors duration-200">
                <Icon name="mdi:bell-outline" class="w-6 h-6" />
                <span>Notifications</span>
            </a>
        </nav>
      </div>
    </aside>

    <!-- Center Column: Pulse Stream -->
    <main class="col-span-1 md:col-span-2">
      <InteractiveFeed client:load />
    </main>

    <!-- Right Column: Intelligence Hub -->
    <aside class="col-span-1 hidden md:block">
        <div class="sticky top-20">
            <div class="intelligence-hub bg-gray-800 bg-opacity-40 backdrop-blur-md border border-gray-700 rounded-lg p-6">
                <h3 class="text-xl font-bold text-white mb-4">Intelligence Hub</h3>
                <p class="text-gray-400 text-sm">AI-powered insights and tools will be available here.</p>
            </div>
        </div>
    </aside>
  </div>
</Layout>
